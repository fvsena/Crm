@{
    Layout = "";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - CRM</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/site.js"></script>
</head>
<body class="p-0">

    <div class="container body-content">
        <div class="card mx-auto my-xl-5 w-50">
            <div class="card-header bg-primary text-white">
                Autenticação - CRM
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Logon", "Login", FormMethod.Post))
                {
                    <div class="form-row">
                        <div class="form-group col-12">
                            <label for="Usuario">Usuário</label>
                            <input type="text" name="Login" id="Login" class="form-control mw-100" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-12"">
                            <label for="Usuario">Senha</label>
                            <input type="password" name="Login" id="Login" class="form-control mw-100" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-12"">
                            <input type="button" class="btn btn-primary" value="Logar" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <script src="~/Scripts/site.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>